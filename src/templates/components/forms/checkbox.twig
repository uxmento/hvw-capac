{% macro render(name, label, value) %}
    {% import "components/icons/icon.twig" as icon %}
    
    <label class="hc-checkbox">
        <input type="checkbox" name="{{name}}" value="{{value}}" class="hc-checkbox__input" {% if options.required %}aria-required="true" required{% endif %} />
        {{icon.render('check-small', 'hc-checkbox__icon')}}
        <span class="hc-checkbox__label">{{label|raw}}</span>
    </label>
{% endmacro %}