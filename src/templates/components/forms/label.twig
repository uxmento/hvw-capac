{% macro render(label, options = {}) %}
<label for="{{options.for}}" class="hc-input__label {{options.class}}">
    {{label}}

    {% if options.optional %}
        <span class="hc-input__label-optional">({{options.optional}})</span> 
    {% endif %}

    {% if options.mandatory %}
        <span class="hc-input__label-mandatory" aria-hidden="true">*</span> 
    {% endif %}

</label>
{% endmacro %}