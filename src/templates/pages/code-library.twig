            <h2>Radio buttons</h2>
            

            <h3>Radio states</h3>
            <div class="component">
                <div class="html">
                    <div class="row justify-center align-center" role="radiogroup">
                        {{radio.render('gender', { label:'Radio button', value:'man' })}}
                        {{radio.render('gender', { label:'Radio checked', value:'man', checked: true})}}
                        {{radio.render('gender', { label:'Radio checked valid', value:'man', checked: true, class:'hc-valid'})}}
                        {{radio.render('gender', { label:'Radio error', value:'man', class:'hc-error' })}}
                        {{radio.render('gender', { label:'Radio disabled', value:'man', class:'hc-disabled', disabled: true})}}
                    </div>
                </div>
            </div>

            <h3>Radio list horizontal</h3>
            <div class="component">
                <div class="html">
                    <div class="row justify-center align-center">

                        <ul class="hc-input__list hc-input__list--horizontal" role="radiogroup">
                            <li>{{radio.render('genders', { label:'Radio button', value:'man' })}}</li>
                            <li>{{radio.render('genders', { label:'Radio checked', value:'man', checked: true})}}</li>
                            <li>{{radio.render('genders', { label:'Radio checked valid', value:'man', checked: true, class:'hc-valid'})}}</li>
                            <li>{{radio.render('genders', { label:'Radio error', value:'man', class:'hc-error' })}}</li>
                            <li>{{radio.render('genders', { label:'Radio disabled', value:'man', class:'hc-disabled', disabled: true})}}</li>
                        </ul>

                    </div>
                </div>
            </div>

            <h3>Radio list vertical </h3>
            <div class="component">
                <div class="html">
                    <div class="row justify-center align-center">

                        <ul class="hc-input__list hc-input__list--vertical" role="radiogroup">
                            <li>{{radio.render('genderz', { label:'Radio button', value:'man' })}}</li>
                            <li>{{radio.render('genderz', { label:'Radio checked', value:'man', checked: true})}}</li>
                            <li>{{radio.render('genderz', { label:'Radio checked valid', value:'man', checked: true, class:'hc-valid'})}}</li>
                            <li>{{radio.render('genderz', { label:'Radio error', value:'man', class:'hc-error' })}}</li>
                            <li>{{radio.render('genderz', { label:'Radio disabled', value:'man', class:'hc-disabled', disabled: true})}}</li>
                        </ul>
                        
                    </div>
                </div>
            </div>

            <h2>Checkbox buttons</h2>
            

