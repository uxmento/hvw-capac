            <h2>Helper (text)</h2>
            <div class="component">
                <div class="html">
                    <div class="row justify-center align-center">
                    
                        {{helper.render('Vergeet je naam niet in te vullen')}}

                    </div>
                </div>
            </div>


            <h2>Combo of input label and helper</h2>
             <div class="component">
                <div class="html">
                    <div class="row justify-center">
                        <div class="combo w-50">
                            {{label.render('Veld label', {mandatory:'true', for:'field-name', id: 'label-field-name'})}}
