                            {{helper.render('Helper text linked to input field', {id: 'field-name-helper'})}}
                        </div>
                    </div>
                </div>
            </div>


            <h2>Dropdown of select</h2>
            
            <div class="component">
                <div class="html">
                    <div class="row justify-center align-center">
                        {{select.render({ name:'company', options:[
                            {
                                label: "UXMen",
                                value: "uxmen"
                            },
                            {
                                label: "Calibrate",
                                value: "calibrate"
                            }
                        ]})}}

                        {{select.render({ name:'company', placeholder:'Status valid', class:"hc-valid", options:[
                            {
                                label: "UXMen",
                                value: "uxmen"
                            },
                            {
                                label: "Calibrate",
                                value: "calibrate"
                            }
                        ]})}}

                        {{select.render({ name:'company', placeholder: 'Status error', class:"hc-error", options:[
                            {
                                label: "UXMen",
                                value: "uxmen"
                            },
                            {
                                label: "Calibrate",
                                value: "calibrate"
                            }
                        ]})}}

                        {{select.render({ name:'company', placeholder: 'Status disabled', class:"hc-disabled", disabled: true, options:[
                            {
                                label: "UXMen",
                                value: "uxmen"
                            },
                            {
                                label: "Calibrate",
                                value: "calibrate"
                            }
                        ]})}}
                    </div>
                </div>
