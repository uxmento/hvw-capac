            </div>


            <h3>Input/textarea</h3>
            <div class="component">
                <div class="html">
                    <div class="row justify-center align-center">
                    
                        <div class="hc-input hc-input--multiline">
                            <textarea class="hc-input__input" placeholder='Textarea placeholer' aria-describedby="chars1"></textarea>
                        </div>

                        <div class="hc-input hc-input--multiline hc-error">
                            {{icon.render('error-circle', {class:'hc-input__icon'})}}
                            <textarea class="hc-input__input hc-input__input--icon-right" placeholder='Textarea placeholer' aria-describedby="chars1"></textarea>
