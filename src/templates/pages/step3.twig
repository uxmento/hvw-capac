{% extends "layouts/default.twig" %}

{% import "components/icons/icon.twig" as icon %}
{% import "components/forms/input.twig" as input %}
{% import "components/forms/select.twig" as select %}
{% import "components/forms/checkbox.twig" as checkbox %}
{% import "components/forms/radio.twig" as radio %}
{% import "components/forms/helper.twig" as helper %}
{% import "components/forms/label.twig" as label %}
{% import "components/forms/switcher.twig" as switcher %}

{% block body %}
	<!-- html goes here -->
	<header>
		<div class="hc-container hc-container-condensed">
			<h1>Aanvraag voor volledige werkloosheidsuitkeringen (C1)</h1>
		</div>
	</header>

	<section role="main">

      <div class="hc-container hc-container-condensed accent py-4">
            
			<h2>Waar kan je mij bereiken</h2>


				<div class="row">
					<div class="col-12">
						{{label.render('E-mailadres', {id: 'email', mandatory:'true'})}}
					</div>
				</div>
				<div class="row">
					<div class="col-8--md col-12 mb-3">
						{{input.render('email', {name:'email', placeholder:'E-mailadres', id:'email'})}}
					</div>
					<div class="col-4--md col-12 mb-3">
            {{label.render('E-mail gdpr', {id: 'gdpr-email', mandatory:'true', class: "sr-only"})}}
						{{switcher.render('gdpr-email')}}
					</div>
				</div>

				<div class="row">
					<div class="col-12">
						{{label.render('Bevestig e-mailadres', {id: 'confirm-email', mandatory:'true'})}}
					</div>
				</div>

				<div class="row">
					<div class="col-8--md col-12 mb-3">
						{{input.render('email', {name:'confirm-email', placeholder:'Bevestig e-mailadres', id:'confirm-email'})}}
					</div>
					<div class="col-4--md col-12 mb-3">
            {{label.render('Confirm e-mail gdpr', {id: 'gdpr-confirm-email', mandatory:'true', class: "sr-only"})}}
						{{switcher.render('gdpr-confirm-email')}}
					</div>
				</div>
        
				<div class="row">
					<div class="col-12">
						{{label.render('Fixed line phone', {id: 'telefoon', optional: 'Optional'})}}
					</div>
				</div>

				<div class="row">
					<div class="col-8--md col-12 mb-3">
						{{input.render('tel', {name:'telefoon', placeholder:'+32 (0)x xxx xx xx', id:'telefoon', helper: 'phone-helper'})}}
            {{helper.render('Alleen belgische nummers zijn toegestaan', {id: 'phone-helper'})}}
					</div>
					<div class="col-4--md col-12 mb-3">
            {{label.render('Telefoon gdpr', {id: 'gdpr-phone', mandatory:'true', class: "sr-only"})}}
						{{switcher.render('gdpr-phone')}}
					</div>
				</div>
        
				<div class="row">
					<div class="col-12">
						{{label.render('GSM', {id: 'mobile', optional: 'Optioneel'})}}
					</div>
				</div>

				<div class="row">
					<div class="col-8--md col-12 mb-3">
						{{input.render('tel', {name:'mobile', placeholder:'+32 04xx xx xx xx', id:'mobile'})}}
					</div>
					<div class="col-4--md col-12 mb-3">
            {{label.render('GSM gdpr', {id: 'gdpr-mobile', mandatory:'true', class: "sr-only"})}}
						{{switcher.render('gdpr-mobile')}}
					</div>
				</div>
        
				<div class="row">
					<div class="col-12">
						{{label.render('Whatsapp', {id: 'whatsapp', optional: 'Optioneel'})}}
					</div>
				</div>

				<div class="row">
					<div class="col-8--md col-12 mb-3">
						{{input.render('text', {name:'whatsapp', placeholder:'', id:'whatsapp'})}}
					</div>
					<div class="col-4--md col-12 mb-3">
            {{label.render('GSM whatsapp', {id: 'gdpr-whatsapp', mandatory:'true', class: "sr-only"})}}
						{{switcher.render('gdpr-whatsapp')}}
					</div>
				</div>
        
				<div class="row">
					<div class="col-12">
						{{helper.render('Alleen belgische nummers zijn toegestaan')}}
					</div>
				</div>
			</div>

			<div class="row mt-2">
				<div class="col-12">
					<button type="button" class="hc-button hc-button__outline-primary mr-2" tabindex="0"  onclick="window.location.href='step2.html'">
						<span class="hc-button__label"><span class="hc-button__icon hc-button__icon--start">{{icon.render('prev-arrow', 'hc-icon')}}</span>Vorige</span>
					</button>
					<button type="button" class="hc-button hc-button__primary" tabindex="0"  onclick="window.location.href='step4.html'">
						<span class="hc-button__label">Volgende<span class="hc-button__icon hc-button__icon--end">{{icon.render('next-arrow', 'hc-icon')}}</span></span>
					</button>
				</div>
			</div>

        </div>
           
	</section>

{% endblock %}