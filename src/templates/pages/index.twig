{% extends "layouts/default.twig" %}

{% import "components/icons/icon.twig" as icon %}
{% import "components/forms/input.twig" as input %}
{% import "components/forms/select.twig" as select %}
{% import "components/forms/checkbox.twig" as checkbox %}
{% import "components/forms/radio.twig" as radio %}
{% import "components/forms/helper.twig" as helper %}
{% import "components/forms/label.twig" as label%}

{% block body %}
	<!-- html goes here -->
	<header>
		<div class="container">
			<h1>UXCraft</h1>
		</div>
	</header>

	<section>
		<div class="container">
			<div class="grid">
				<div class="grid-item-1">
					col
				</div>
				<div class="grid-item-1">
					col
				</div>
				<div class="grid-item-1">
					col
				</div>
				<div class="grid-item-1">
